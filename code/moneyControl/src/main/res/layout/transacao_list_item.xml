<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/transacaoListItemTxtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/05/2013"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/transacaoListItemTxtDescricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:paddingRight="5dp"
                android:text="Banco do Brasil"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="4" >

                <TextView
                    android:id="@+id/transacaoListItemTxtValor"
                    style="@style/TextViewItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_currency_value"
                    android:textColor="@color/red" />

                <com.beardedhen.androidbootstrap.FontAwesomeText
                    android:id="@+id/transacaoListItemFontAwe"
                    style="@style/TextViewItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    fontawesometext:fa_icon="fa-arrow-down" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>