<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/contaAPagarListItemBtnPagarFatura"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contaAPagarListItemTxtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/05/2013"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contaAPagarListItemTxtDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banco do Brasil"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/contaAPagarListItemTxtValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_currency_value"
                    android:textColor="#ff0000"
                    android:textSize="25sp" />

                <com.beardedhen.androidbootstrap.FontAwesomeText
                    android:id="@+id/contaAPagarListItemFontAwe"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:textSize="25sp"
                    fontawesometext:fa_icon="fa-check" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/contaAPagarListItemBtnPagarFatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/contas_list_item_cartao_pay"
        bootstrap:bb_icon_right="fa-money"
        bootstrap:bb_type="default"
        bootstrap:bb_roundedCorners="true"
        bootstrap:bb_size="small"/>

</RelativeLayout>