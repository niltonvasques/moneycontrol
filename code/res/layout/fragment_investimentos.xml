<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".transacoesActivity" >
    
    
    <br.niltonvasques.moneycontrol.view.custom.ChangeMonthView
        android:id="@+id/reportInvestimentosFragmentChangeMonthView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <RelativeLayout 
        android:id="@+id/investimentosFragmentLayHeader"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:descendantFocusability="blocksDescendants"
	    android:layout_below="@id/reportInvestimentosFragmentChangeMonthView"
	    android:gravity="center_vertical">
    
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            
			<TextView 
	            android:id="@+id/transacaoListItemTxtDescricao"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="4"
	            android:layout_gravity="center_vertical"
	            android:text="NOME"/>
	            
            <TextView 
                android:id="@+id/ativoListItemTxtPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="VALOR"/>
            
            <TextView 
                android:id="@+id/ativoListItemTxtMonthProfit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="% MENSAL"/>
            
            <TextView 
                android:id="@+id/ativoListItemTxtYearProfit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="% ANUAL"/>
            
            <TextView 
                android:id="@+id/ativoListItemTxtProfit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="% HISTÃ“RICA"/>
        </LinearLayout>
	</RelativeLayout>

	<ListView 
	    android:id="@+id/transacoesActivityListViewTransacoes"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/investimentosFragmentLayHeader"
	    android:layout_above="@+id/transacoesActivityBottomBar"></ListView>
	
	<ExpandableListView
        android:id="@+id/transacoesFragmentExpandableListViewTransacoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reportInvestimentosFragmentChangeMonthView"
	    android:layout_above="@+id/transacoesActivityBottomBar"
	    android:visibility="gone" >
    </ExpandableListView>
	
	<LinearLayout 
	    android:id="@id/transacoesActivityBottomBar"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    android:gravity="center">
	    
	    <TextView
             android:id="@+id/transacoesActivityTxtDebitosSum" 
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="#ff0000"
             style="@style/TextViewBottomBar"
             android:text="@string/default_currency_value" />
         
         <TextView
             android:id="@+id/transacoesActivityTxtCreditosSum" 
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="@color/dark_green"
             style="@style/TextViewBottomBar"
             android:text="@string/default_currency_value"/>
         
         <TextView 
             android:id="@+id/transacoesActivityTxtSaldoSum"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             style="@style/TextViewBottomBar"
             android:text="@string/default_currency_value"/>
	    
	</LinearLayout>

</RelativeLayout>
