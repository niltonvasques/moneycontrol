<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="Adicionar Conta"/>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
		    <ImageView 
		        android:id="@+id/addContaDialogImgIcon"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:background="@drawable/bb_icon"/>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
			    <EditText 
			        android:id="@+id/addContaDialogEditTxtNome"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:hint="nome da conta"/>
			    
			    <EditText 
			        android:id="@+id/addContaDialogEditTxtSaldo"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:hint="saldo inicial"
			        android:inputType="numberDecimal"/>
		    </LinearLayout>
	    </LinearLayout>
	    
    </LinearLayout>

</RelativeLayout>
