<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <RelativeLayout
        android:id="@+id/reportByCategoriaFragmentLayDateRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button 
            android:id="@+id/reportByCategoriaFragmentBtnPreviousMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_previous_item"
            android:layout_alignParentLeft="true"/>
        <TextView 
            android:id="@+id/reportByCategoriaFragmentTxtViewMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abril - 2014"
            style="@style/TextViewTitle"
            android:layout_centerInParent="true"/>
        <Button 
            android:id="@+id/reportByCategoriaFragmentBtnNextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_next_item"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <br.niltonvasques.moneycontrol.view.custom.SquareLayout
        android:id="@+id/fragmentReportByCategoriaContent" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    </br.niltonvasques.moneycontrol.view.custom.SquareLayout>


</RelativeLayout>