<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

	<ListView 
	    android:id="@+id/mainActivityListViewContas"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@+id/mainActivityBottomBar"></ListView>
	
	<LinearLayout 
	    android:id="@id/mainActivityBottomBar"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal"
	    android:gravity="center">
	    
	    <TextView
             android:id="@+id/mainActivityTxtDebitosSum" 
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="#ff0000"
             android:text="R$ 0.00" />
         
         <TextView
             android:id="@+id/mainActivityTxtCreditosSum" 
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="#04a800"
             android:text="R$ 0.00"/>
         
         <TextView 
             android:id="@+id/mainActivityTxtSaldoSum"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="R$ 0.00"/>
	    
	</LinearLayout>

</RelativeLayout>
